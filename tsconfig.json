{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es2017", "dom"],
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*.tsx", "src/**/*.ts"],
	"exclude": ["node_modules"]
}
